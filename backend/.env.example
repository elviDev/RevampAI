# Environment Configuration for CEO Communication Platform Backend

# Application
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database
DB_POOL_MIN=2
DB_POOL_MAX=20

# Redis Configuration
REDIS_URL=redis://host:port
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PUBSUB_DB=1

# JWT Configuration (generate secure secrets in production)
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-at-least-32-characters-long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
API_PREFIX=/api
API_VERSION=v1
CORS_ORIGIN=*
RATE_LIMIT_MAX=100

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15m

# Performance & Caching
CACHE_TTL_SHORT=5m
CACHE_TTL_MEDIUM=1h
CACHE_TTL_LONG=24h
QUERY_TIMEOUT=30s
REQUEST_TIMEOUT=30s

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Development Settings
SEED_DATABASE=false
DEBUG_SQL=false
DEBUG_WEBSOCKET=false