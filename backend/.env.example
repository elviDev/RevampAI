# Environment Configuration for CEO Communication Platform Backend

# Application
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Database Configuration
# Update these values to match your PostgreSQL setup
DATABASE_URL=postgresql://postgres:password@localhost:5432/ceo_platform_dev
DB_POOL_MIN=2
DB_POOL_MAX=20

# Redis Configuration  
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PUBSUB_DB=1

# JWT Configuration (generate secure secrets in production)
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-at-least-32-characters-long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
API_PREFIX=/api
API_VERSION=v1
CORS_ORIGIN=http://localhost:3000,http://localhost:19006,exp://192.168.1.100:19000
RATE_LIMIT_MAX=1000

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15m

# Performance & Caching
CACHE_TTL_SHORT=5m
CACHE_TTL_MEDIUM=1h
CACHE_TTL_LONG=24h
QUERY_TIMEOUT=30s
REQUEST_TIMEOUT=30s

# Logging Configuration
# Levels: error, warn, info, debug
# For development: info reduces startup noise, debug shows everything
# For production: warn or error for minimal logging
LOG_LEVEL=info
# Formats: json (production), pretty (development with colors)
LOG_FORMAT=pretty

# Development Settings
SEED_DATABASE=true
DEBUG_SQL=false
DEBUG_WEBSOCKET=false